<div class="containeer">
	<div class="lead">
		<div class="media">
			<div class="media-left">
				<a href="#">
					<img class="media-object d-flex mr-3" src="<%= @question.gravator %>" />
				</a>
			</div>
			<div class="media-body">
				<h3 class="mt-0"><%= @question.email %></h3>
				<%= @question.body %>
				
				<div>
					<button class="btn btn-success btn-sm" data-toggle="modal" 
					data-target="#new_answer_modal">Submit Answer</button>
				</div>
				<%= render 'home/new_answer_form' %>
				<% @answers.each do |answer| %>
					<div class="media mt-3">
						<div class="media-left">
							<a href="#" class="d-flex pr-3">
								<img class="media-object" src="<%= answer.gravator %>" />
							</a>
						</div>
						<div class="media-body">
							<h4 class="mt-0"><%=  answer.email %> answered:</h4>
							<p class="small"><%= time_ago_in_words answer.created_at %> ago<br/>
							<%= answer.body %></p>
						</div>
					</div>
				<% end %>
				<% if @answers.empty? %>
					<div class="alert alert-info">Nothing here yet, be the first to ask?</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
