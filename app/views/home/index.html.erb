<div class="containeer">
	<div class="question">
	<% @questions.each do |q| %>
		<div class="media">
			<div class="media-left">
			  <img class="media-object" src=<%= q.gravator %> alt="Generic placeholder image">
			</div>
			<div class="media-body">
				<h5 class="media-heading"><%= q.email%> asked</h5>
				<div class="time"><%= time_ago_in_words q.created_at %></div>
				<p><%= q.body %></p>
				<div class="view"><a href="<%= question_path(q) %>" class="btn btn-success navbar-btn btn-sm">View Answer</a></div>
			</div>
		</div>
	<% end %>
	<% if @questions.empty? %>
		<div class="alert alert-info">Nothing here yet, be the first to ask?</div>
	<% end %>
	</div>
</div>